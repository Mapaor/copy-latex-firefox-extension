{
  "manifest_version": 3,
  "name": "Copy LaTeX (KaTeX & MathJax)",
  "version": "1.0.0",
  "description": "Hover and click to copy LaTeX expressions on ChatGPT, DeepSeek, Stack Exchange and other math-related websites.",
  "icons": { "48": "icon48.png" },
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.deepseek.com/*",
    "https://math.stackexchange.com/*",
    "https://physics.stackexchange.com/*",
    "https://proofwiki.org/*"
  ],
  "optional_host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "copy-latex@mapaor"
    }
  }
}
